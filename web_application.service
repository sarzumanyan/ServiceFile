[Unit]
Description=Gunicorn instance to serve myapp which name is main.py
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/workspace
Environment="PATH=/home/ubuntu/web_application_venv/bin"
ExecStart=/home/ubuntu/web_application_venv/bin/gunicorn -w 4 -b 127.0.0.1:5010 main:app
Restart=always

[Install]
WantedBy=multi-user.target
